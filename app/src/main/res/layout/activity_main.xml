<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.wangjie.leanforward.sample.MainActivity">

    <Button
            android:id="@+id/activity_main_rv_grid_simple_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RV grid simple"
            />

    <Button
            android:id="@+id/activity_main_rv_list_simple_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RV list simple"
            />
    <Button
            android:id="@+id/activity_main_rv_list_complex_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RV list"
            />


</LinearLayout>
